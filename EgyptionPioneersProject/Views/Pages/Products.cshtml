@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <h1 class="h3 mb-4 text-gray-800">Skin Care Products</h1>

    <div class="row">

        <!-- Product 1 -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <img src="@Url.Content("~/images/mostrizing-cream.png")" class="card-img-top" alt="Moisturizing Cream" />
                <div class="card-body">
                    <h5 class="card-title">Moisturizing Cream</h5>
                    <p class="card-text">
                        Deep hydrating cream suitable for all skin types.
                        Helps restore moisture and glow.
                    </p>
                    <h6 class="font-weight-bold text-primary">$19.99</h6>
                </div>
            </div>
        </div>

        <!-- Product 2 -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <img src="@Url.Content("~/images/vitaminc.png")" class="card-img-top" alt="Vitamin C Serum" />
                <div class="card-body">
                    <h5 class="card-title">Vitamin C Serum</h5>
                    <p class="card-text">
                        Brightening serum to reduce dark spots and even skin tone.
                    </p>
                    <h6 class="font-weight-bold text-primary">$24.99</h6>
                </div>
            </div>
        </div>

        <!-- Product 3 -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <img src="@Url.Content("~/images/sunscrean.png")" class="card-img-top" alt="Sunscreen SPF 50" />
                <div class="card-body">
                    <h5 class="card-title">Sunscreen SPF 50</h5>
                    <p class="card-text">
                        Lightweight sun protection that blocks harmful UV rays.
                    </p>
                    <h6 class="font-weight-bold text-primary">$14.99</h6>
                </div>
            </div>
        </div>

        <!-- Product 4 -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <img src="@Url.Content("~/images/foaming_cleanser.png")" class="card-img-top" alt="Foaming Cleanser" />
                <div class="card-body">
                    <h5 class="card-title">Foaming Cleanser</h5>
                    <p class="card-text">
                        Removes dirt and oil while keeping the skin soft.
                    </p>
                    <h6 class="font-weight-bold text-primary">$9.99</h6>
                </div>
            </div>
        </div>

        <!-- Product 5 -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <img src="@Url.Content("~/images/alovera_gel.png")" class="card-img-top" alt="Aloe Vera Gel" />
                <div class="card-body">
                    <h5 class="card-title">Aloe Vera Gel</h5>
                    <p class="card-text">
                        Soothes irritated skin and provides deep cooling hydration.
                    </p>
                    <h6 class="font-weight-bold text-primary">$7.49</h6>
                </div>
            </div>
        </div>

        <!-- Product 6 -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <img src="@Url.Content("~/images/night_repaircream.png")" class="card-img-top" alt="Night Repair Cream" />
                <div class="card-body">
                    <h5 class="card-title">Night Repair Cream</h5>
                    <p class="card-text">
                        Nourishes the skin overnight for a refreshed morning glow.
                    </p>
                    <h6 class="font-weight-bold text-primary">$29.99</h6>
                </div>
            </div>
        </div>

    </div>

</div>
