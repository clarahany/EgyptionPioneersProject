<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>DermaCare</title>

  
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        body, h1, h2, h3, h4, h5, h6, span, p, a {
            font-family: 'Poppins', sans-serif !important;
        }
    </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">DermaCare</div>
            </a>

            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="~/index.html">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">
                Interface
            </div>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Components</span>
                </a>
                <div id="collapseTwo" class="collapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Components:</h6>
                        <a class="collapse-item" href="~/buttons.html">Buttons</a>
                        <a class="collapse-item" href="~/cards.html">Cards</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Utilities</span>
                </a>
                <div id="collapseUtilities" class="collapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Utilities:</h6>
                        <a class="collapse-item" href="~/utilities-color.html">Colors</a>
                        <a class="collapse-item" href="~/utilities-border.html">Borders</a>
                        <a class="collapse-item" href="~/utilities-animation.html">Animations</a>
                        <a class="collapse-item" href="~/utilities-other.html">Other</a>
                    </div>
                </div>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">
                Addons
            </div>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Pages</span>
                </a>
                <div id="collapsePages" class="collapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Login Screens:</h6>
                        <a class="collapse-item" href="@Url.Action("Login", "Pages")">Login</a>
                        <a class="collapse-item" href="@Url.Action("Register", "Pages")">Register</a>
                    </div>
                </div>
            </li>

            <!-- Products -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Products", "Pages")">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Products</span>
                </a>
            </li>

            <!-- Diseases -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("SkinDiseases", "Pages")">
                    <i class="fas fa-fw fa-allergies"></i>
                    <span>Diseases</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

        </ul>
        <!-- End Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          
            <!-- ===== Top Bar: Logo (left) + Search (right) ===== -->
            <div class="topbar d-flex justify-content-between align-items-center px-5 py-4"
                 style="background: none; box-shadow: none; height: 90px;">

                <!-- Left Logo -->
                <div class="d-flex align-items-center" style="gap: 10px;">
                    <i class="fas fa-spa fa-2x" style="color:#1A8C9E;"></i>

                    <div>
                        <h4 class="m-0 font-weight-bold" style="color:#1A8C9E;">DERMACARE</h4>
                        <p class="m-0" style="color:#7AC943; font-size:14px;">
                            Refresh Your Natural Beauty
                        </p>
                    </div>
                </div>

                <!-- Right Search -->
                <form class="d-none d-sm-inline-block form-inline" style="width: 300px;">
                    <div class="input-group">
                        <input type="text" class="form-control bg-light border-0 small"
                               placeholder="Search..." aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Main Content -->
            <div id="content">

               

                @RenderBody()

            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- End Content Wrapper -->

    </div>
    <!-- End Page Wrapper -->

    <a class="scroll-to-top rounded" href="#">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <!-- ... stays the same ... -->

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>

@await RenderSectionAsync("Scripts", required: false)
